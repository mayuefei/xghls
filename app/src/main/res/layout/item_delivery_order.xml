<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="475px"
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px"
        android:layout_marginRight="24px"
        android:background="@drawable/bg_the_order_item_color"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="24px"
        android:paddingTop="38px"
        android:paddingBottom="28px">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="取件编码"
                    android:textColor="#000000"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_take_a_number"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="135831"
                    android:textColor="@color/cfe8cab"
                    android:textSize="30px" />

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="快递公司"
                    android:textColor="#000000"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_courier_company"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="建华快递"
                    android:textColor="@color/cfe8cab"
                    android:textSize="30px"
                    android:textStyle="bold" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="76px"
                android:text="联系人"
                android:textColor="#000000"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_contact_information_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="80px"
                android:text="张分云"
                android:textColor="@color/cfe8cab"
                android:textSize="30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_contact_information_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="13596556896"
                android:textColor="@color/c54c9ff"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:text="地址信息"
                android:textColor="#000000"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_address_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:text="山西传媒学院"
                android:textColor="@color/c386c74"
                android:textSize="30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dormitory_building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:text="4B"
                android:textColor="@color/cfe8cab"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_the_dormitory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="603"
                android:textColor="@color/cfe8cab"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:text="支付日期"
                android:textColor="#000000"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_payment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:text="2019-04-09 13:25:36"
                android:textColor="@color/c386c74"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:text="派送时间"
                android:textColor="#000000"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_the_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚上"
                android:textColor="@color/c386c74"
                android:textSize="30px"
                android:textStyle="bold" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="108px"
                android:text="备注"
                android:textColor="#000000"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_note_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000000"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_the_order_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50px"
                android:text="订单状态"
                android:textColor="#000000"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_the_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待取件"
                android:textColor="@color/c386c74"
                android:textSize="30px"
                android:textStyle="bold" />
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_take_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="24px"
            android:layout_weight="1"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:paddingLeft="60px"
            android:paddingRight="60px">

            <Button
                android:id="@+id/btn_take"
                android:layout_width="wrap_content"
                android:layout_height="66px"
                android:background="@drawable/bg_time_color"
                android:text="取件"
                android:textColor="@color/cffffff"
                android:textSize="30px" />

            <Button
                android:id="@+id/btn_not_to_take"
                android:layout_width="wrap_content"
                android:layout_height="66px"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_to_take_part_color"
                android:text="未取到件"
                android:textColor="@color/cffffff"
                android:textSize="30px" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>